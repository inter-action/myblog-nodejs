{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "removeComments": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "server/*"
      ]
    }
  },
  "include": [
    "./server/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
